<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/search_bg"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_judulbuku"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Judul Buku"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_namaPenulis"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_judulbuku"
        android:text="Nama Penulis"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="normal" />

    <ImageButton
        android:id="@+id/bt_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:src="@drawable/ic_delete" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/bt_delete"
        android:textColor="@color/button"
        android:textOff="TERSEDIA"
        android:textOn="DIPINJAM"
        android:thumbTint="@color/button"/>

</RelativeLayout>